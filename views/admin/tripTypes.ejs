<!doctype html>
<html class="no-js " lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <meta name="description" content="Responsive Bootstrap 4 and web Application ui kit.">

    <title>
        <%= pageTitle %>
    </title>
    <!-- Favicon-->
    <link rel="icon" href="favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="/assets/plugins/bootstrap/css/bootstrap.min.css">
    <!-- Bootstrap Select Css -->
    <link rel="stylesheet" href="/assets/plugins/bootstrap-select/css/bootstrap-select.css" />
    <!-- Custom Css -->
    <link rel="stylesheet" href="/assets/css/style.min.css">
    <%- include('../includes/loader-style.ejs') %>
        <style>
            label {
                margin-bottom: 0px;
            }
        </style>
</head>

<body class="theme-blue right_icon_toggle">
    <!-- Page Loader -->
    <div class="LW">
        <div class="L">Loading...</div>
    </div>

    <!-- Left Sidebar -->
    <%- include('../includes/side-panel.ejs') %>

        <!-- Main Content -->
        <section class="content">
            <div class="body_scroll">
                <div class="block-header">
                    <div class="row">
                        <div class="col-lg-7 col-md-6 col-sm-12">
                            <h2>Trip Types Page</h2>
                            <ul class="breadcrumb">
                                <li class="breadcrumb-item"><a href="index.html"><i class="zmdi zmdi-home"></i> Admin Panel</a>
                                </li>
                                <li class="breadcrumb-item active">Pages</li>
                                <li class="breadcrumb-item active">Trip Types Page</li>
                            </ul>
                            <button class="btn btn-primary btn-icon mobile_menu" type="button">
                            <i class="zmdi zmdi-sort-amount-desc"></i>
                        </button>
                        </div>
                    </div>
                </div>
                <div class="container-fluid">
                    <!-- Hover Rows -->
                    <div class="row clearfix">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="card">
                                <div class="header">
                                    <h2><strong>All</strong> Trip Types</h2>
                                    <ul class="header-dropdown">
                                        <li class="remove">
                                            <button id="addTripType" class="btn btn-primary" style="position:relative;top:-1rem">
                                            <i style="color: white;" class="zmdi zmdi-hc-fw">ïŒ‰</i> ADD</button>
                                        </li>
                                    </ul>
                                </div>
                                <div class="body">
                                    <div class="row clearfix">
                                        <div class="col-lg-12">
                                            <div class="card">
                                                <div class="table-responsive">
                                                    <table id="tripTypesTable" class="table table-hover theme-color mb-0">
                                                        <thead>
                                                            <tr>
                                                                <th style="vertical-align: middle; text-align: center;">#</th>
                                                                <th style="vertical-align: middle; text-align: center;">NAME</th>
                                                                <th style="vertical-align: middle; text-align: center;">DECK</th>
                                                                <th style="vertical-align: middle; text-align: center;">PRICE</th>
                                                                <th style="vertical-align: middle; text-align: center;">NUMBER OF SEATS
                                                                </th>
                                                                <th style="vertical-align: middle; text-align: center;">ACTIONS</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody></tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- #END# Hover Rows -->
                </div>
            </div>
        </section>

        <!-- Modal Dialogs ====== -->
        <div class="modal fade" id="tripTypeModal" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="loader-wrapper" style="display: none; position: absolute;">
                    <div class="loader">
                        <div class="m-t-30"><img class="zmdi-hc-spin" src="assets/images/loader.svg" width="48" height="48" alt="Aero"></div>
                        <p>Please wait...</p>
                    </div>
                </div>
                <div class="modal-content">

                    <div class="modal-header text-center">
                        <h4 class="title text-center" id="defaultModalLabel">Add a Trip Type</h4>
                    </div>
                    <div class="modal-body">
                        <div class="row clearfix">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label>Trip Type Name:</label>
                                    <input id="tripTypeName" type="text" class="form-control" placeholder="Trip Type Name" />
                                    <label id="tripTypeNameError" class="error" for="tripTypeName"></label>
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label>Deck:</label>
                                    <select id="tripTypeDeck" class="form-control show-tick">
                                    <option>Upper</option>
                                    <option>Lower</option>
                                    <option>One level</option>
                                </select>
                                    <label id="tripTypeDeckError" class="error" for="tripTypeDeck"></label>
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label>Ticket Price:</label>
                                    <div class="input-group masked-input">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="zmdi zmdi-money"></i></span>
                                        </div>
                                        <input id="tripTypePrice" type="text" class="form-control money-LBP" placeholder="Ex: 9,999 LBP">
                                    </div>
                                    <label id="tripTypePriceError" class="error" for="tripTypePrice"></label>
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label>Number of Seats:</label>
                                    <div class="input-group spinner" data-trigger="spinner">
                                        <input id="tripTypeNumberOfSeats" type="number" class="form-control text-center" placeholder="0" min="0">
                                    </div>
                                    <label id="tripTypeNumberOfSeatsError" class="error" for="name"></label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn waves-effect" data-dismiss="modal">CLOSE</button>
                        <button type="button" class="btn btn-primary waves-effect">SAVE CHANGES</button>
                    </div>
                </div>
            </div>
        </div>
        <!-- Jquery Core Js -->
        <%- include('../includes/bottom-scripts.ejs') %>
            <script src="/ajax/tripTypes.js"></script>
</body>

</html>