<!DOCTYPE HTML>
<html>

<head>
    <title>BayRoute Water Taxi</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="/website/home/home-stylesheet.css" rel="stylesheet">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>
    <!-- TICKETS POPUP MODEL
    <div id="tickets-modal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h2 style="text-align: center;">Members Area Only</h2>
            <br>
            <h2 style="text-align: center;">
                <a href="login.html">
                    <h2>Login/ Sign Up</h2>
                </a>
            </h2>
        </div>
    </div> -->
    <!--Destination Popup Modal-->
    <div id="destination-modal" class="modal">
        <div class="modal-content">
            <span class="close" onclick="closeModal()">&times;</span>
            <div id="destination-content">
                <img src="/website/icons/map.png" style="width:70%; margin-left: 10%;">
            </div>
        </div>
    </div>

    <!---->
    <div class="container">
        <div style="text-align: center;">
            <img id="logo" src="/website/icons/logo.png" alt="logo">
        </div>
        <br>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse nav-fill" id="collapsibleNavbar">
                <a class="nav-link nav-item" href="/">Home<span class="sr-only">(current)</span></a>
                <a class="nav-link nav-item" href="/tickets-and-offers">Tickets & Offers</a>
                <a class="nav-link nav-item" href="/schedule">Schedule</a>
                <!-- <a class="nav-link nav-item" href="/destinations">Destinations</a> -->
                <a class="nav-link nav-item" href="/contact-us">Contact Us</a>
                <a class="nav-link nav-item" href="/about-us">About Us</a>
            </div>
        </nav>
        <br>
        <br>
        <div class="accordion" id="accordionExample">
            <div class="card">
                <div class="card-header" id="headingOne">
                    <h2 class="clearfix mb-0">
                        <a class="btn btn-link w-100 text-left" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne"><i class="fa fa-chevron-circle-down"></i>  Trip Types</a>
                    </h2>
                </div>
                <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordionExample">
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Deck
                                </th>
                                <th>
                                    Price L.L.
                                </th>
                            </thead>
                            <tbody>
                                <% tripTypes.forEach( t => { %>
                                    <tr>
                                        <td>
                                            <%= t.name %>
                                        </td>
                                        <td>
                                            <%= t.deck %>
                                        </td>
                                        <td>
                                            <%= t.ticketPrice %>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-header" id="headingOne">
                    <h2 class="clearfix mb-0">
                        <a class="btn btn-link w-100 text-left" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne"><i class="fa fa-chevron-circle-down"></i>  Our Stations</a>
                    </h2>
                </div>
                <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
                    <div class="card-body">
                        <% stations.forEach( v => { %>
                            -
                            <%= v.name %>
                                <br>
                                <% }) %>
                    </div>
                </div>
            </div>
        </div>
        <br>
        <br>
        <div id="footer" class="row">
            <div class="col">
                <h4 style="text-align: justify; color: rgb(255, 209, 0);">Contact Us</h4>
                <p id="footer-contact">Tel: 81739058 <br> Email: info@bayroutetaxi.com</p>
            </div>
            <div class="col">
                <p id="copyright">&copy; Copyright 2020 BayRoute Water Taxi</p>
            </div>
            <div class="col">
                <h4 style="text-align: right; color: rgb(255, 209, 0);">Follow Us</h4>
                <div id="social-btns">
                    <img src="/website/icons/fb.jpg" style=" width:10%; text-align: right;" alt="FB">
                    <img src="/website/icons/insta.jpg" style=" width:10%; text-align: right;" alt="IG">
                    <img src="/website/icons/twitter.jpg" style=" width:10%; text-align: right;" alt="Twitter">
                </div>
            </div>
        </div>
    </div>

    <script src="/ajax/jquery-3.4.1.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script>
        $('#destination-modal-trigger').click(() => $('#destination-modal').toggle())

        function closeModal() {
            $('#destination-modal').css('display', 'none')
        }
    </script>
</body>

</html>